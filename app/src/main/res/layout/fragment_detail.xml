<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparentColor"
    tools:context=".detail.DetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shapetopradius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/group4"
            app:layout_constraintBottom_toBottomOf="@+id/tabLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_trigger_drawer_detain_fragment"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="29dp"
            android:background="@color/transparentColor"
            android:scaleType="fitXY"
            android:src="@drawable/top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/search_edit_text_detail_fragment"
            android:layout_width="0dp"
            android:layout_height="31dp"
            android:layout_marginStart="29dp"
            android:background="@drawable/shapebuttonradiouswhite"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:drawablePadding="5dp"
            android:drawableTint="#D9DADC"
            android:fontFamily="@font/lato"
            android:gravity="center_horizontal|start|center_vertical"
            android:hint="SEARCH"
            android:inputType="textShortMessage"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:textColorHint="#D9DADC"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_trigger_drawer_detain_fragment"
            app:layout_constraintEnd_toStartOf="@+id/btn_filter_detail_fragment"
            app:layout_constraintStart_toEndOf="@+id/btn_trigger_drawer_detain_fragment"
            app:layout_constraintTop_toTopOf="@+id/btn_trigger_drawer_detain_fragment" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_filter_detail_fragment"
            android:layout_width="40dp"
            android:layout_height="31dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/filterbuttonradiouswhite"
            android:drawableRight="@drawable/ic_funnel"
            android:drawableTint="#D9DADC"
            android:paddingRight="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/search_edit_text_detail_fragment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/search_edit_text_detail_fragment"
            app:layout_constraintTop_toTopOf="@+id/search_edit_text_detail_fragment" />

        <ImageView
            android:id="@+id/img_operation_icon_detail_fragment"
            android:layout_width="53dp"
            android:layout_height="51dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="38dp"
            android:background="@drawable/rounded_fg"
            android:foreground="@drawable/ic_group_9"
            android:foregroundGravity="center"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_trigger_drawer_detain_fragment" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/img_operation_icon_detail_fragment"
            app:layout_constraintStart_toEndOf="@+id/img_operation_icon_detail_fragment"
            app:layout_constraintTop_toTopOf="@+id/img_operation_icon_detail_fragment">

            <TextView
                android:id="@+id/txt_operation_title_detail_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:text="9128399"
                android:textColor="#FFFFFF"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/txt_operation_author_detail_fragment"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:fontFamily="@font/lato"
                android:text="Durum : Onaylanmayı Bekliyor"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_operation_summery_detail_fragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="28dp"
            android:fontFamily="@font/lato"
            android:text="9128399 numaralı istek ile 22.01.2020 tarihinnde Boran Gökbulut tarafından 1000 TL bütçe talep edildi. Behiç Tanağardı onaylayabilir. "
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_operation_summery_detail_fragment"
            app:tabIndicatorColor="#9ECD54" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

