<?xml version = "1.0" encoding = "utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/buttonhomeradius"
    tools:context = ".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="27dp"
            android:fontFamily="@font/lato_bold"
            android:text="Onaylanmayı Bekleyenler"
            android:textColor="#3E4450"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="25dp"
            android:foregroundGravity="center"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7">

            <RadioButton
                android:layout_width="302dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:background="@drawable/shape_pop_up_toggle"
                android:drawableLeft="@drawable/ic_up"
                android:drawablePadding="8dp"
                android:paddingLeft="10dp"


                android:layoutDirection="rtl"
                android:text="Ucuzdan Pahalıya"
                android:textColor="#3E4450"
                android:textSize="14sp"
                android:theme="@style/MyEditText" />

            <RadioButton
                android:layout_width="302dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:background="@drawable/shape_pop_up_toggle"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/ic_down"
                android:drawablePadding="8dp"
                android:layoutDirection="rtl"
                android:text="Pahalıdan Ucuza"
                android:textColor="#3E4450"
                android:textSize="14sp"
                android:theme="@style/MyEditText" />
        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>