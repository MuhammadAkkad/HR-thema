<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/welcome_page_layout"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/img_logo_activity_main"
        android:layout_width="144dp"
        android:layout_height="42dp"
        android:layout_marginStart="135dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="135dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoblack" />


    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/imageSlider"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:sliderAnimationDuration="600"
        app:sliderAutoCycleDirection="back_and_forth"
        app:sliderAutoCycleEnabled="true"
        app:sliderCircularHandlerEnabled="true"
        app:sliderIndicatorAnimationDuration="600"
        app:sliderIndicatorGravity="center_horizontal|bottom"
        app:sliderIndicatorMargin="40dp"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorPadding="5dp"
        app:sliderIndicatorRadius="2dp"
        app:sliderIndicatorSelectedColor="#F0BA3A"
        app:sliderIndicatorUnselectedColor="#E5E5E5"
        app:sliderScrollTimeInSec="4">

    </com.smarteist.autoimageslider.SliderView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="11dp"
        android:layout_height="22dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/btn_login_activity_main"
        app:layout_constraintEnd_toEndOf="@+id/btn_login_activity_main"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn_login_activity_main"
        app:layout_constraintTop_toTopOf="@+id/btn_login_activity_main"
        app:srcCompat="@drawable/right" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login_activity_main"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/transparentColor"
        android:fontFamily="@font/lato"
        android:includeFontPadding="false"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:shadowColor="#FFF"
        android:text="GeÃ§"
        android:textAllCaps="false"
        android:textColor="#A3A3A3"
        android:textSize="18dp"
        app:iconPadding="0dp"
        app:iconSize="15dp"
        app:iconTint="#A3A3A3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeColor="#FFF">

    </com.google.android.material.button.MaterialButton>



</androidx.constraintlayout.widget.ConstraintLayout>